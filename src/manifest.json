{
  "manifest_version": 3,
  "name": "Filtering+ for Tumblr",
  "version": "1.0.2",

  "short_name": "Filtering+",
  "author": "April Sylph",
  "homepage_url": "https://github.com/AprilSylph/Filtering-Plus#readme",

  "description": "Filter tags or post content via right-click",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "menus",
    "scripting"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "{fb1afd1b-278d-440b-80e5-91ec9b5e8a16}",
      "strict_min_version": "102.0"
    },
    "gecko_android": {
      "strict_min_version": "113.0"
    }
  }
}
