{
  "manifest_version": 3,
  "name": "Filtering+ for Tumblr",
  "version": "1.1.0",

  "short_name": "Filtering+",
  "author": "April Sylph",
  "homepage_url": "https://github.com/AprilSylph/Filtering-Plus#readme",

  "description": "Filter tags or post content via right-click",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "scripting"
  ],

  "minimum_chrome_version": "121",
  "browser_specific_settings": {
    "gecko": {
      "id": "{fb1afd1b-278d-440b-80e5-91ec9b5e8a16}",
      "data_collection_permissions": { "required": ["none"] },
      "strict_min_version": "128.0"
    }
  }
}
